            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right" >

                <TextView
                    android:id="@+id/carbslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/carbs1"
                    android:layout_width="wrap_content"
