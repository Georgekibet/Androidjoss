            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right" >

                <TextView
                    android:id="@+id/fibrelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fibre"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/fibre1"
                    android:layout_width="wrap_content"
