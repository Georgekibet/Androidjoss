                    android:text="0 " />

                <TextView
                    android:id="@+id/carbsIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:text="0 " />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right" >

                <TextView
                    android:id="@+id/fatlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fat"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/fat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
