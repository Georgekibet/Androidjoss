                    android:text="0 " />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right" >

                <TextView
                    android:id="@+id/voteslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Votes"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/Votes1TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V ^ " />

                <TextView
                    android:id="@+id/Votes2TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V ^ " />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/carbscheckTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <Button
                    android:id="@+id/getButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modalbckg"
                    android:text="   Get  " />

                <Button
                    android:id="@+id/getButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/modalbckg"
                    android:text="  Get   " />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioGroup
                    android:id="@+id/ironradioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </RadioGroup>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/modalbckg"
                    android:text="Back" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>