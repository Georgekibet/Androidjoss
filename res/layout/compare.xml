<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RHE"
    style="@style/ActionBar.Transparent.Example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="20dp"
    android:layout_weight="1"
    android:padding="15dp" >

    <TableRow
        style="@style/ActionBar.Transparent.Example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/runLabel"
            
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginRight="20dp"
            android:text="Capacity" />

        <TextView
            android:id="@+id/hitLabel"
            
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Prod 1" />

        <TextView
            android:id="@+id/errorLabel"

            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Prod 2" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/visitorRuns"
            
            android:paddingRight="20dp"
            
            android:layout_height="wrap_content"
            android:text="Protein" />

       
        <TextView
            android:id="@+id/visitorHits"
           
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/visitorErrors"
            
            android:layout_height="wrap_content"
            android:text="0" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/homeRuns"
            android:layout_height="wrap_content"
            android:text="Fat" />

        <TextView
            android:id="@+id/homeHits"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/homeErrors"
            android:layout_height="wrap_content"
            android:text="0" />
    </TableRow>

    <TableRow android:layout_height="wrap_content"
         android:layout_marginTop="10dp"  >

        <TextView
            android:id="@+id/visitorRuns"
            android:layout_height="wrap_content"
            android:text="Colestrol" />

        <TextView
            android:id="@+id/visitorHits"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/visitorErrors"
            android:layout_height="wrap_content"
            android:text="0" />
    </TableRow>

    <TableRow android:layout_height="wrap_content" 
         android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/visitorRuns"
            android:layout_height="wrap_content"
            android:text="Calories" />

        <TextView
            android:id="@+id/visitorHits"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/visitorErrors"
            
            android:layout_height="wrap_content"
            android:text="0" />
    </TableRow>

</TableLayout>